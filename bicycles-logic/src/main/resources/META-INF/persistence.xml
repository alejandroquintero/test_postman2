<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="BicyclesPU" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>java:app/jdbc/Bicycles</jta-data-source>
        <class>co.edu.uniandes.csw.bicycles.entities.BicycleEntity</class>
        <class>co.edu.uniandes.csw.bicycles.entities.CategoryEntity</class>
        <class>co.edu.uniandes.csw.bicycles.entities.BrandEntity</class>
        <class>co.edu.uniandes.csw.bicycles.entities.PhotoAlbumEntity</class>
        <class>co.edu.uniandes.csw.bicycles.entities.ClientEntity</class>
        <class>co.edu.uniandes.csw.bicycles.entities.ShoppingEntity</class>
        <class>co.edu.uniandes.csw.bicycles.entities.ItemShoppingEntity</class>
        <class>co.edu.uniandes.csw.bicycles.entities.ReviewEntity</class>
        <properties>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.cache.type.default" value="NONE" />
        </properties>
    </persistence-unit>
</persistence>
